<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    tools:context=".Frm.FragmentBottomSheet"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi hình đại diện"
        android:textSize="15sp"
        android:fontFamily="@font/utm_avo_bold"
        android:textColor="#000"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#707070" />

    <TextView
        android:id="@+id/tvOpenCamera"
        android:fontFamily="@font/utm_avo_regular"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chụp hình mới"
        android:textSize="15sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tvOpenGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/utm_avo_regular"
        android:text="Chọn hình trong thư viện"
        android:textColor="#000"
        android:textSize="15sp" />



</LinearLayout>